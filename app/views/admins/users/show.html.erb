<div class="container">
  <div class="row">
    <div class="col mt-5 text-center">
      <h1><%= @user.last_name + " " + @user.first_name %>さんのプロフィール/投稿一覧</h1>
    </div>
  </div>
  <div class="row">
  <table class="table col-md-4 mt-3">
    <tbody>
      <tr>
        <th>プロフィール画像</th>
        <th><%= image_tag @user.get_profile_image, size: "100x100" %></th>
      </tr>
      <tr>
        <th>名前</th>
        <th><%= @user.last_name + " " + @user.first_name %></th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th><%= link_to "編集する", edit_admins_user_path(@user), class: "btn btn-success btn-block" %></th>
      </tr>
    </tbody>
  </table>
  <div class="col-md-8 mt-3">
    <table class="table">
      <thead>
        <tr>
          <th>Shop image</th>
          <th>Shop name</th>
          <th>Review</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @shops.each do |shops| %>
        <tr>
          <td><%= image_tag shops.get_shop_image, size: "100x100" %></td>
          <td><%= shops.shop_name %></td>
          <td><%= render "publics/shops/review", shops: shops %></td>
          <td><%= link_to "Show", admins_shop_path(shops.id), class: "btn btn-secondary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>