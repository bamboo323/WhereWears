<div class="container mt-3 mx-auto">
  <div class="row">
    <div class="container mt-5 text-center">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>

<%= form_with model: @user, url: admins_user_path(@user), method: :patch do |f| %>
  <table class="row table mt-3">
    <tr>
      <th>氏名</th>
      <td>
        <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %><br>
        <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
      </td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= f.text_area :introduction, class: "form-control" %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, "false" %>
        <%= f.label :is_deleted, "有効会員" %>
        <%= f.radio_button :is_deleted, "true" %>
        <%= f.label :is_deleted, "退会させる" %>
      </td>
    </tr>
  </table>
  <div class="row">
    <%= f.submit "変更を保存する" ,class: "btn btn-success" %>
  </div>
  <% end %>
</div>
