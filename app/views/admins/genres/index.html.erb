<div class="container">
  <div class="row text-center">
    <div class="col mt-5">
      <h1>ジャンル追加・一覧</h1>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col text-center">
      <%= form_with model: @genre, url: admins_genres_path do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :name %>
        <%= f. submit "新規登録", class: "btn btn-primary" %>
      <% end %>
      <table class='table table-inverse mt-3'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genres| %>
            <tr>
              <td><%= genres.name %></td>
              <td><%= link_to "編集", edit_admins_genre_path(genres), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>






    </div>
  </div>
</div>