<!DOCTYPE html>
<html>
  <head>
    <title>WhereWears</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><span>WhereWears</span></a>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                </li>
                <li class="ml-3">
                  <%= link_to "About", about_path, class: "btn btn-outline-light text-light" %>
                </li>
                <li class="ml-3">
                  <%= link_to "Mypage", mypage_publics_users_path, class: "btn btn-outline-light text-light" %>
                </li>
                <li class="ml-3">
                  <%= link_to "Users", publics_users_path, class: "btn btn-outline-light text-light" %>
                </li>
                 <li class="ml-3">
                   <%= link_to "Shops", publics_shops_path, class: "btn btn-outline-light text-light" %>
                 </li>
                <li class="ml-3">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-light text-light" %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="ml-3">
                  <%= link_to "Users", admins_users_path, class: "btn btn-outline-light text-light" %>
                </li>
                 <li class="ml-3">
                   <%= link_to "Shops", admins_shops_path, class: "btn btn-outline-light text-light" %>
                 </li>
                 <li class="ml-3">
                   <%= link_to "Genres", admins_genres_path, class: "btn btn-outline-light text-light" %>
                 </li>
                <li class="ml-3">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-light text-light" %>
                </li>
              <% else %>
                <li class="ml-3">
                  <%= link_to "About", about_path, class: "btn btn-outline-light text-light" %>
                </li>
                <li class="ml-3">
                  <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-light text-light" %>
                </li>
                <li class="ml-3">
                  <%= link_to "ログイン", user_session_path, class: "btn btn-outline-light text-light" %>
                </li>
                <li class="ml-3">
                  <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-outline-light text-light" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "管理者の方はこちら", admin_session_path, method: :post %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </footer>
  </body>
</html>
