<%= render "publics/users/errors", user: @user %>
<div class="text-success text-center mt-3">
  <%= flash[:notice]%>
</div>

<div class="container">
  <div class="row">
    <div class="col mt-5 text-center">
      <h2>新規登録</h2>
    </div>
  </div>

  <%= form_with model: @user, url: user_registration_path do |f| %>

    <div class="row mt-3 text-center">
        <div class="col">
          <%= f.label :名前 %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名" %>
        </div>
    </div>

    <div class="row mt-3 text-center">
      <div class="col">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", :size=>"40" %>
      </div>
    </div>

    <div class="row mt-3 text-center">
      <div class="col">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3 text-center">
      <div class="col">
        <%= f.label :パスワード確認 %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions mt-3 text-center">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <div class="row mt-5 text-center">
    <div class="col">
      <h3>登録済みの方</h3>
    </div>
  </div>

  <div class="row mt-2 text-center">
    <div class="col">
      <%= render "public/shared/links" %>からログインしてください
    </div>
  </div>
</div>