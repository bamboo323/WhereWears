  <table class="table mt-5">
    <thead>
      <tr>
        <th>image</th>
        <th>shop name</th>
        <th>address</th>
        <th>genre</th>
        <th>review</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% shops.each do |shops| %>
        <tr>
          <td><%= image_tag shops.get_shop_image, size: "100x100" %></td>
          <td><%= shops.shop_name %></td>
          <td><%= shops.shop_address %></td>
          <td><%= shops.genre.name %></td>
          <td><%= render "publics/shops/review", shops: shops %></td>
          <td>
            <% shops.tags.each do |tag| %>
              <%= tag.tag_name %>,
            <% end %>
          </td>
          <td>コメント数：<%= shops.shop_comments.count %></td>
          <td><%= link_to "Show", publics_shop_path(shops.id), class: "btn btn-secondary" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>