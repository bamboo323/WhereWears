<div class="container">
  <div class="row text-center">
    <div class="col mt-5">
      <h1>Shop info</h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col text-center">
      <%= image_tag @shop.get_shop_image, size: "600x300" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <table>
        <tr>
          <th>Shop name</th>
          <td><%= @shop.shop_name %></td>
        </tr>
        <tr>
          <th>Shop address</th>
          <td><%= @shop.shop_address %></td>
        </tr>
        <tr>
          <th>Genre</th>
          <td><%= @shop.genre.name %></td>
        </tr>
        <tr>
          <th>Tag</th>
          <td>
            <% @shop.tags.each do |tag| %>
              <%= tag.tag_name %>,
            <% end %>
          </td>
        </tr>
        <tr>
          <th>Shop detail</th>
          <td><%= @shop.shop_detail %></td>
        </tr>
      </table>
      <div class="col">
        <%= render "publics/shop_comments/index", shop: @shop, shop_comment: @shop_comment %>
      </div>
    </div>
  </div>

</div>