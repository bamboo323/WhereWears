<div class="container">
  <div class="row text-center">
    <div class="col mt-5">
      <h1>Shop info</h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <%= image_tag @shop.get_shop_image, size: "300x300" %>
    </div>
    <div class="col">
      <table>
        <tr>
          <th>Shop name</th>
          <td><%= @shop.shop_name %></td>
        </tr>
        <tr>
          <th>Genre</th>
          <td><%= @shop.genre_id %></td>
        </tr>
        <tr>
          <th>Shop address</th>
          <td><%= @shop.shop_address %></td>
        </tr>
        <tr>
          <th>Shop detail</th>
          <td><%= @shop.shop_detail %></td>
        </tr>
      </table>
    </div>
  </div>

</div>