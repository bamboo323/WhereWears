<div class="container">
  <div class="row text-center">
    <div class="col mt-5">
      <h1>Shop info</h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col text-center">
      <%= image_tag @shop.get_shop_image, size: "600x300" %>
    </div>
  </div>

  <div class="w-75 mx-auto">
    <table class="table table-bordered text-center mt-3">
      <tr>
        <th scope="row" width="30%">Shop name</th>
        <td><%= @shop.shop_name %></td>
      </tr>
      <tr>
        <th scope="row">Shop address</th>
        <td><%= @shop.shop_address %></td>
      </tr>
      <tr>
        <th scope="row">Genre</th>
        <td><%= @shop.genre.name %></td>
      </tr>
      <tr>
        <th scope="row">Tag</th>
        <td>
          <% @shop.tags.each do |tag| %>
            <%= tag.tag_name %>,
          <% end %>
        </td>
      </tr>
      <tr>
        <th scope="row">Shop detail</th>
        <td><%= @shop.shop_detail %></td>
      </tr>
    </table>
  </div>
  <div>
    <%= render "publics/shop_comments/index", shop: @shop, shop_comment: @shop_comment %>
  </div>
</div>