<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
      <h1>ショップ情報編集</h1>
    </div>
  </div>

  <%= form_with model: @shop, url: publics_shop_path(@shop.id), method: :patch, local: true do |f| %>
    <div class="row">
      <div class="col text-center mt-3">
        <%= f.label :ショップ名 %>
        <%= f.text_field :shop_name %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center mt-3">
        <%= f.label :ショップ住所 %>
        <%= f.text_field :shop_address %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center mt-3">
        <%= f.label :ショップ詳細 %>
        <%= f.text_area :shop_detail %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center mt-3">
        <%= f.label :ショップ画像 %>
        <%= f. file_field :shop_image %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center mt-3">
        <%= f.label :ジャンル %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
    </div>
     <div class="row">
      <div class="col text-center mt-3">
        <%= f.label :評価 %>
        <%= render "publics/shops/review", shops: @shop %>
      </div>
    </div>

    <div class="row">
      <div class="col text-center mt-3">
        <%= f. submit "編集完了", class: "btn btn-primary" %>
        <%= link_to "投稿削除", publics_shop_path(@shop.id), method: :delete, data: { confirm: "本当に投稿を削除しますか？"}, class: "btn btn-danger" %>
      </div>
    </div>

  <% end %>
</div>