
<div class="text-success text-center">
  <%= flash[:notice]%>
</div>

<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
      <h1>Shops</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 mt-5">
      <div>ジャンル検索</div>
        <% @genres.each do |genre| %>
          <div>
            <%= link_to "#{genre.name}", publics_shop_genre_path(@shops, genre) %>
          </div>
        <% end %>
      <div class="mt-3">タグ検索</div>
        <%= form_with url: publics_shops_path, method: :get do |f| %>
          <%= f.text_field :search %>
          <%= f.submit "検索", :tag_name => nil %>
        <% end %>
    </div>
    <div class="col-md-9">
      <%= render "publics/shops/index", shops: @shops %>
    </div>
  </div>
  <div class="row text-center">
    <div class="col mt-5">
      <%= paginate @shops %>
    </div>
  </div>
</div>