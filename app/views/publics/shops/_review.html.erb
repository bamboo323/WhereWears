<!-- each文で回している部分の部分テンプレートのため、shops.idと記述することで投稿した分だけ表示する -->
<div id="star<%= shops.id %>"></div>
  <script>
    <% if shops.status == "表示" %>
      $("#star<%= shops.id %>").empty();
      $("#star<%= shops.id %>").raty({
        size: 36,
        starOff: "<%= asset_path("star-off.png") %>",
        starHalf: "<%= asset_path("star-half.png") %>",
        starOn: "<%= asset_path("star-on.png") %>",
        half: true,
        readOnly: true,
        score: <%= shops.star %>,
        scoreName: 'shop[star]',
      });
    <% else %>
      $("#star<%= shops.id %>").html("評価は管理者が非表示にしました");
    <% end %>
  </script>