<div class="container">
  <div class="row text-center">
    <div class="col mt-5">
      <h1><%= @genre.name %>一覧</h1>
    </div>
  </div>
  <% if @genre.shops.present? %>
    <div class="row">
      <div class="col text-right mt-3">
        <%= form_with url: search_publics_shops_path, method: :get do |f| %>
          <%= f.text_field :keyword, placeholder: "「県名」や「市名」を入力してください", :size => "35" %>
          <!-- hidden_fieldでショップの持っているgenre idを送る-->
          <%= f.hidden_field :genre_id, :value => @genre.id %>
          <%= f.submit "絞りこみ検索" %>
        <% end %>
      </div>
    </div>
    <%= render "publics/shops/index", shops: @genre.shops %>
  <% else %>
    <h2 class="text-center mt-5 mb-5"><%= @genre.name %>はまだ投稿がありません。</h2>
  <% end %>
</div>