<table class="table mt-5">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>introduction</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td class="text-center"><%= image_tag user.get_profile_image, size: "100x100" %></td>
          <td class="text-center"><%= link_to user.last_name + " " + user.first_name, publics_user_path(user) %></td>
          <td><%= user.introduction %></td>
          <td class="text-center"><%= link_to user.followings.count, followings_publics_user_path(user) %>フォロー<%= link_to user.followers.count, followers_publics_user_path(user) %>フォロワー</td>
          <td class= "text-center"><%= render "publics/relationships/btn", user: user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>