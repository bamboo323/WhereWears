<table class="table mt-5">
    <thead class="text-center">
      <tr>
        <th width="20%">image</th>
        <th>name</th>
        <th>follows/followers</th>
      </tr>
    </thead>
    <tbody class="text-center mt-3">
      <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "90x90" %></td>
          <td><%= link_to user.last_name + " " + user.first_name, publics_user_path(user) %></td>
          <td>
            <%= link_to user.followings.count, followings_publics_user_path(user) %>フォロー<%= link_to user.followers.count, followers_publics_user_path(user) %>フォロワー<br>
            <%= render "publics/relationships/btn", user: user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>