<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
      <h1>Mypage</h1>
    </div>
  </div>

<!-- 新規投稿機能 -->
  <div class="row-md-2 mt-3">
    <h3>行ったお店を投稿しよう！</h3>
      <%= render "publics/shops/form", shop: @shop %>
  </div>

  <!-- User詳細 -->
  <div class="row">
    <div class="col-xl-1">
      <%= image_tag @user.get_profile_image, size: "150x150" %>
    </div>
    <div class="col-xl-1"></div>
    <div class="col-xl-8 center-block">
      <table>
        <tr>
          <th>名前</th>
          <td><%= @user.last_name + " " + @user.first_name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class="row">
        <%= link_to "ユーザー情報編集", edit_publics_user_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
  </div>





</div>