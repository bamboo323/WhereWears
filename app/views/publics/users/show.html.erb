<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <h2><%= @user.last_name + " " + @user.first_name %>さんのプロフィール</h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-5 text-center">
      <%= image_tag @user.get_profile_image, size: "200x200" %>
    </div>
    <div class="col-md-7">
      <table class="table">
        <tr>
          <th>名前</th>
          <td><%= @user.last_name + " " + @user.first_name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <th>follows</th>
          <td><%= link_to @user.followings.count, followings_publics_user_path(@user) %></td>
        </tr>
        <tr>
          <th>followers</th>
          <td><%= link_to @user.followers.count, followers_publics_user_path(@user) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <table class="table">
      <thead>
        <tr>
          <th>Shop image</th>
          <th>Shop name</th>
          <th>Shop address</th>
          <th>Review</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @shops.each do |shops| %>
        <tr>
          <td><%= image_tag shops.get_shop_image, size: "100x100" %></td>
          <td><%= shops.shop_name %></td>
          <td><%= shops.shop_address %></td>
          <td><%= render "publics/shops/review", shops: shops %></td>
          <td><%= link_to "Show", publics_shop_path(shops.id), class: "btn btn-secondary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>