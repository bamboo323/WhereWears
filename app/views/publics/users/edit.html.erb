<%= render "publics/users/errors", user: @user %>

<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
      <h1>ユーザー情報編集</h1>
    </div>
  </div>

  <%= form_with model: @user, url: publics_user_path, method: :patch do |f| %>
    <div class="w-75 mx-auto">
      <table class="table table-bordered text-center mt-3">
        <tr>
          <th scope="row">名前</th>
          <td>
            <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %><br>
            <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
          </td>
        </tr>
        <tr>
          <th scope="row">プロフィール画像</th>
          <td>
            <%= f.file_field :profile_image %>
          </td>
        </tr>
        <tr>
          <th scope="row">自己紹介(50文字まで)</th>
          <td>
            <%= f.text_area :introduction, class: "form-control", size: "50x10" %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col text-center">
    <%= f.submit "変更を保存する" ,class: "btn btn-success" %>
    </div>
  <% end %>
</div>