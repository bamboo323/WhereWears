<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
      <h1>ユーザー情報編集</h1>
    </div>
  </div>

  <%= form_with model: @user, url: publics_user_path, method: :patch do |f| %>
  <table class="row table mt-3">
      <tr>
        <th>氏名</th>
        <td>
          <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %><br>
          <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
        </td>
      </tr>
      <tr>
        <th>プロフィール画像</th>
        <td><%= f.file_field :profile_image %></td>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= f.text_area :introduction, class: "form-control" %></td>
      </tr>
    </table>
    <div class="row">
      <%= f.submit "変更を保存する" ,class: "btn btn-success" %>
    </div>
    <% end %>
</div>