<% if user != current_user%>
  <% if current_user.followings?(user.id) %>
    <%= link_to "フォロー外す", publics_user_relationships_path(user), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "フォローする", publics_user_relationships_path(user), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>