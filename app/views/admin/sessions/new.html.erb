<div class="text-success text-center">
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col mt-5 text-center">
      <h2>管理者ログイン</h2>
    </div>
  </div>

  <%= form_with model: @admin, url: admin_session_path do |f| %>

    <div class="row mt-3 text-center">
      <div class="col">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", :size=>"40" %>
      </div>
    </div>

    <div class="row mt-3 text-center">
      <div class="col">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions mt-3 text-center">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>